
# formats ls as a vertical list, excluding extra information from `ls -l`
# `CLICOLOR_FORCE=1` forces ls colour to be displayed through piping.
alias l="CLICOLOR_FORCE=1 ls -lF  | awk '{$1=$2=$3=$4=$5=$6=$7=$8=""; if (NR!=1) print substr($0, 9)}'"
alias la="CLICOLOR_FORCE=1 ls -AlF  | awk '{$1=$2=$3=$4=$5=$6=$7=$8=""; if (NR!=1) print substr($0, 9)}'"
